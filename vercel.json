{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "buildCommand": "npm install && npm run build",
          "outputDirectory": "dist"
        }
      },
      {
        "src": "server/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/client/dist/$1",
        "continue": true
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/.*",
        "dest": "/client/dist/index.html"
      }
    ]
  }